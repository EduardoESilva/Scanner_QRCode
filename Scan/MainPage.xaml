<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Scan.MainPage">

    <StackLayout>
        <Frame BackgroundColor="Black" Padding="24" CornerRadius="0">
            <Label Text="Scaner" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Button x:Name="btnScannerQR" Margin="10" Text="Leitor QR" HorizontalOptions="Center" VerticalOptions="Center" Clicked="btnScannerQR_Clicked"/>

        <Entry x:Name="meuEntry" Placeholder="Resultado da Tag:"/>

        <Entry x:Name="txtResultado" Placeholder="Resultado do QRCode:"/>
    </StackLayout>

</ContentPage>
